<!-- -->
<launch>

  <!-- send table.xml to param server -->
  <arg name="downsampler" default="voxel_grid" />
  <arg name="downsampler_res" default="1" />
  <arg name="init_x" default="0.0" />
  <arg name="init_y" default="0.0" />
  <arg name="init_z" default="0.0" />  
  <arg name="init_roll" default="0.0" />  
  <arg name="init_pitch" default="0.0" />  
  <arg name="init_yaw" default="0.0" />  
  <arg name="use_imu" default="false" />
  <arg name="imu_upside_down" default="false" />
  <arg name="imu_topic" default="/imu_raw" />
  <arg name="map_size_x" default="2000" />
  <arg name="map_size_y" default="2000" />
  <arg name="map_size_z" default="200" />
  
  <node pkg="ndt_localizer" type="ndt_mapping_tku_ground" name="ndt_mapping_tku_ground" output="screen">
    <param name="downsampler" value="$(arg downsampler)" />
    <param name="downsampler_res" value="$(arg downsampler_res)" />
    <param name="init_x" value="$(arg init_x)" />
    <param name="init_y" value="$(arg init_y)" />
    <param name="init_z" value="$(arg init_z)" />
    <param name="init_roll" value="$(arg init_roll)" />
    <param name="init_pitch" value="$(arg init_pitch)" />
    <param name="init_yaw" value="$(arg init_yaw)" />
    <param name="use_imu" value="$(arg use_imu)" />
    <param name="imu_upside_down" value="$(arg imu_upside_down)" />
    <param name="imu_topic" value="$(arg imu_topic)" />
    <param name="map_size_x" value="$(arg map_size_x)" />
    <param name="map_size_y" value="$(arg map_size_y)" />
    <param name="map_size_z" value="$(arg map_size_z)" />
  </node>
  
</launch>
